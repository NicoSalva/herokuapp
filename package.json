{
  "name": "herokuapp-test-suite",
  "version": "1.0.0",
  "type": "module",
  "description": "Test suite for herokuapp application",
  "scripts": {
    "test": "wdio run config/wdio.conf.ts",

    "test:chrome": "BROWSER=chrome HEADLESS=true wdio run config/wdio.conf.ts",
    "test:firefox": "BROWSER=firefox HEADLESS=true wdio run config/wdio.conf.ts",

    "test:mobile": "MOBILE=true BROWSER=chrome HEADLESS=true wdio run config/wdio.conf.ts",

    "test:tag": "TAGS=\"@smoke\" wdio run config/wdio.conf.ts",
    "test:spec": "SPEC=./tests/features/create-item.feature wdio run config/wdio.conf.ts",

    "test:docker": "wdio run config/wdio.docker.conf.cjs",
    "test:docker:tag": "TAGS=\"@smoke\" wdio run config/wdio.docker.conf.cjs",
    "test:docker:spec": "SPEC=./tests/features/create-item.feature wdio run config/wdio.docker.conf.cjs",

    "allure:clean": "rm -rf allure-results/* allure-report/*",
    "allure:generate": "npm run allure:clean && allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "@wdio/types": "^9.20.0",
    "allure-commandline": "^2.34.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
