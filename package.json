{
  "name": "herokuapp-test-suite",
  "version": "1.0.0",
  "type": "module",
  "description": "Test suite for herokuapp application",
  "scripts": {
    "test": "wdio run wdio/wdio.conf.ts",

    "test:chrome": "BROWSER=chrome HEADLESS=true wdio run wdio/wdio.conf.ts",
    "test:firefox": "BROWSER=firefox HEADLESS=true wdio run wdio/wdio.conf.ts",

    "test:docker": "docker-compose up --build test",

    "test:mobile": "MOBILE=true BROWSER=chrome HEADLESS=true wdio run wdio/wdio.conf.ts",

    "test:spec": "SPEC=./tests/features/basic-app.feature wdio run wdio/wdio.conf.ts",

    "allure:clean": "rm -rf allure-results/* allure-report/*",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@wdio/allure-reporter": "^8.35.0",
    "@wdio/cli": "^8.35.0",
    "@wdio/cucumber-framework": "^8.35.0",
    "@wdio/local-runner": "^8.35.0",
    "@wdio/spec-reporter": "^8.35.0",
    "@wdio/types": "^8.35.0",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
