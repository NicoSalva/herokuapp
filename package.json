{
  "name": "herokuapp-test-suite",
  "version": "1.0.0",
  "type": "module",
  "description": "Test suite for herokuapp application",
  "scripts": {
    "test": "wdio run wdio.desktop.conf.ts",
    "test:desktop": "wdio run wdio.desktop.conf.ts",
    "test:mobile": "MOBILE=true wdio run wdio.mobile.conf.ts",
    "test:smoke": "wdio run wdio.desktop.conf.ts --cucumberOpts.tagExpression='@smoke'",
    "test:functional": "wdio run wdio.desktop.conf.ts --cucumberOpts.tagExpression='@functional'",
    "test:bugs": "wdio run wdio.desktop.conf.ts --cucumberOpts.tagExpression='@bug-detection'",
    "test:exists": "wdio run wdio.desktop.conf.ts --cucumberOpts.tagExpression='@exists'",
    "test:edit": "wdio run wdio.desktop.conf.ts --cucumberOpts.tagExpression='@edit'",
    "test:delete": "wdio run wdio.desktop.conf.ts --cucumberOpts.tagExpression='@delete'",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^8.35.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/local-runner": "^8.35.0",
    "@wdio/spec-reporter": "^8.35.0",
    "@wdio/types": "^8.35.0",
    "allure-commandline": "^2.34.1",
    "allure-js-commons": "^3.4.1",
    "chromedriver": "^131.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
